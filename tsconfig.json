{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types", // Default location
      "./types" // Your custom types directory
    ],
    "esModuleInterop": true
  },
  "include": [
    "code/*.ts",
    "types/**/*.d.ts" // Include your types directory.
  ],
  "exclude": ["node_modules"]
}
